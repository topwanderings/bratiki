<%= table_for @chairs do |t| %>
    <%= t.body do |chair| %>
        <%= t.r do %>
            <%= t.d link_to(chair.name, { :controller => '/admin/institute/faculty/chair', :action => 'edit', :institute_id => params[:institute_id], :faculty_id => params[:faculty_id], :chair_id => chair }, {:method => 'get', :class => 'edit'}) %>
            <%= t.d button_to("изменить", { :controller => '/admin/institute/faculty/chair', :action => 'edit', :institute_id => params[:institute_id], :faculty_id => params[:faculty_id], :chair_id => chair }, {:method => 'get', :class => 'edit'}) %>
            <%= t.d button_to("удалить", { :controller => '/admin/institute/faculty/chair', :action => 'destroy', :institute_id => params[:institute_id], :faculty_id => params[:faculty_id], :chair_id => chair }, {:class => 'destroy'}) %>
        <% end %>
        <%= t.r do %>
          <%= t.d :class => 'td_list', :colspan => 3 do  %>
            <%= link_to("Группы", { :controller => '/admin/institute/faculty/chair/group', :action => 'index', :institute_id => params[:institute_id], :faculty_id => params[:faculty_id], :chair_id => chair }, {:class => 'list_name'}) %>
            <br/><%chair.groups.each do |group| %>
              <%= link_to(group.number, {:controller => '/admin/institute/faculty/chair/group', :action => 'edit', :institute_id =>params[:institute_id], :faculty_id => params[:faculty_id], :chair_id => chair, :group_id => group}, {:class => 'list'}) %>
            <% end %>
          <% end %>
        <% end %>
    <% end %>
<% end %>




