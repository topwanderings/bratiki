<%= table_for @institutes do |t| %>
    <%= t.body do |institute| %>
        <%= t.r do %>
          <%= t.d link_to(institute.name, { :controller => '/admin/institute', :action => 'edit', :institute_id => institute }, {:method => 'get', :class => 'edit'}) %>
            <%= t.d button_to("изменить", { :controller => '/admin/institute', :action => 'edit', :institute_id => institute}, {:method => 'get', :class => 'edit'}) %>
            <%= t.d button_to("удалить", { :controller => '/admin/institute', :action => 'destroy', :institute_id => institute}, {:class => 'destroy'}) %>
        <% end %>
        <%= t.r do %>
          <%= t.d :class => 'td_list' do  %>
            <%= link_to("Факультеты", { :controller => '/admin/institute/faculty', :action => 'index', :institute_id => institute }, {:class => 'list_name'}) %>
            <% institute.faculties.each do |faculty| %>
              <br/><%= link_to(faculty.name , {:controller => '/admin/institute/faculty', :action => 'edit', :institute_id => institute, :faculty_id => faculty}, {:class => 'list'}) %>
            <% end %>
          <% end %>
        <% end %>
    <% end %>
<% end %>
