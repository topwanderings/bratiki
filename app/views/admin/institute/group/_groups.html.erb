<%= table_for @groups do |t| %>
    <%= t.body do |group| %>
        <%= t.r do %>
            <%= t.d link_to(group.number, { :controller => '/admin/institute/group', :action => 'edit', :group_id => group, :institute_id => params[:institute_id] }, {:method => 'get'}) %>
            <%= t.d button_to("изменить", { :controller => '/admin/institute/group', :action => 'edit', :group_id => group, :institute_id => params[:institute_id] }, {:method => 'get', :class => 'edit'}) %>
            <%= t.d button_to("удалить", { :controller => '/admin/institute/group', :action => 'destroy', :group_id => group, :institute_id => params[:institute_id] }, {:class => 'destroy'}) %>
        <% end %>
    <% end %>
<% end %>


