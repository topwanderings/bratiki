<article id="edit_military_rank">
  <section id="main">
    <h1>
      <%=  link_to("Воинские звания", {:controller => '/admin/dictionary/military_rank', :action => 'index'}) %> / <b><%=  link_to(MilitaryRank.find(params[:id]).name, {:controller => '/admin/dictionary/military_rank', :action => 'edit', :id => params[:id]}) %></b>
    </h1>
    <%= form_tag({:action => "edit"}) do %>
        <p class="field">
          <label for="name" data-icon="u" > Воинское звание </label>
          <%= text_field_tag("name", @military_rank.name, {:placeholder => "полковник"})  %>
          <label for="name" id="error_name" class="error"><%= flash[:name] %></label>
        </p>

        <p class="button">
          <%= submit_tag "Изменить" %>
        </p>
    <% end %>
  </section>
</article>
