<%= table_for @groups do |t| %>
    <%= t.body do |group| %>
        <%= t.r do %>
            <%= t.d link_to(group.number, { :controller => '/admin/chair/group', :action => 'edit', :group_id => group, :chair_id => params[:chair_id] }), {:method => 'get'} %>
            <%= t.d button_to("изменить", { :controller => '/admin/chair/group', :action => 'edit', :group_id => group, :chair_id => params[:chair_id] }, {:method => 'get', :class => 'edit'}) %>
            <%= t.d button_to("удалить", { :controller => '/admin/chair/group', :action => 'destroy', :group_id => group, :chair_id => params[:chair_id] }, {:class => 'destroy'}) %>
        <% end %>
    <% end %>
<% end %>


