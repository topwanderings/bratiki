<%= table_for @faculties do |t| %>
    <%= t.body do |faculty| %>
        <%= t.r do %>
            <%= t.d link_to(faculty.name, { :controller => '/admin/faculty', :action => 'edit', :faculty_id => faculty }, {:class => 'edit'}) %>
            <%= t.d button_to("изменить", { :controller => '/admin/faculty', :action => 'edit', :faculty_id => faculty}, {:method => 'get', :class => 'edit'}) %>
            <%= t.d button_to("удалить", { :controller => '/admin/faculty', :action => 'destroy', :faculty_id => faculty}, {:class => 'destroy'}) %>
        <% end %>
        <%= t.r do %>
          <%= t.d :class => 'td_list', :colspan => 3 do  %>
            <%= link_to("Кафедры", { :controller => '/admin/faculty/chair', :action => 'index', :faculty_id => faculty}, {:class => 'list_name'}) %>
            <% faculty.chairs.each do |chair| %>
              <br/><%= link_to(chair.name, {:controller => '/admin/faculty/chair', :action => 'edit', :faculty_id => faculty, :chair_id => chair}, {:class => 'list'}) %>
            <% end %>
          <% end %>
        <% end %>
    <% end %>
<% end %>
