<%= table_for @groups do |t| %>
    <%= t.body do |group| %>
        <%= t.r do %>
            <%= t.d link_to(group.number, { :controller => '/admin/faculty/chair/group', :action => 'edit', :group_id => group, :faculty_id => params[:faculty_id], :chair_id => params[:chair_id] }, {:method => 'get'}) %>
            <%= t.d button_to("изменить", { :controller => '/admin/faculty/chair/group', :action => 'edit', :group_id => group, :faculty_id => params[:faculty_id], :chair_id => params[:chair_id] }, {:method => 'get', :class => "edit"}) %>
            <%= t.d button_to("удалить", { :controller => '/admin/faculty/chair/group', :action => 'destroy', :group_id => group, :faculty_id => params[:faculty_id], :chair_id => params[:chair_id] }, {:class => "destroy"}) %>
        <% end %>
    <% end %>
<% end %>


