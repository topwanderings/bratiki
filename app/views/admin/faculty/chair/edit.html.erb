<article id="edit_chair">
  <section id="main">
    <h1>
      <%=  link_to("Кафедры", {:controller => '/admin/faculty/chair', :action => 'index', :faculty_id => params[:faculty_id]}) %> / <b><%=  link_to(Chair.find(params[:chair_id]).name, {:controller => '/admin/faculty/chair', :action => 'edit', :faculty_id => params[:faculty_id], :chair_id => params[:chair_id]}, {:method => 'get'}) %></b>
    </h1>
    <ul>
      <li><%= link_to("Группы", { :controller => '/admin/faculty/chair/group', :action => 'index', :faculty_id => params[:faculty_id], :chair_id => params[:chair_id] }) %></li>
    </ul>
    <%= form_tag({:action => "edit", :faculty_id => params[:faculty_id]}) do %>
        <p class="field">
          <label for="name" data-icon="u" > Название кафедры</label>
          <%= text_field_tag("name", @chair.name, {:placeholder => "компьютерная безопасность"})  %>
          <label for="name" id="error_name" class="error"><%= flash[:name] %></label>
        </p>

        <p class="field">
          <label for="number" data-icon="u" > Номер кафедры </label>
          <%= text_field_tag("number", @chair.number, {:placeholder => "731"})  %>
          <label for="number" id="error_number" class="error"><%= flash[:number] %></label>
        </p>

        <p class="button">
          <%= submit_tag "Изменить" %>
        </p>
    <% end %>
  </section>
</article>
