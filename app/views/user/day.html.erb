<article>
  <section id="main">
    <h1>
      <%=  link_to("Календарь", {:controller => '/user', :action => 'calendar'}) %> / <b><%=  link_to(@date, {:controller => '/user', :action => 'calendar', :year => params[:year], :month => params[:month], :day => params[:day]}) %></b>
    </h1>
    <%= table_for @pairs do |t| %>
      <%= t.head "Пары" %>
      <%= t.body do |pair| %>
        <%= t.r do %>
          <%= t.d link_to(pair.object, { :controller => '/user/pair', :action => 'edit', :pair_id => pair }) %>
          <%= t.d button_to("изменить", { :controller => '/user/pair', :action => 'edit', :pair_id => pair}, {:method => 'get', :class => 'edit'}) %>
          <%= t.d button_to("удалить", { :controller => '/user/pair', :action => 'destroy', :pair_id => pair}, {:class => 'destroy'}) %>
        <% end %>
      <% end %>
    <% end %>


    <%= table_for @tasks do |t| %>
        <%= t.body do |task| %>
            <%= t.r do %>
                <%= t.d link_to(task.title, { :controller => '/user/task', :action => 'edit', :task_id => task }) %>
                <%= t.d button_to("изменить", { :controller => '/user/task', :action => 'edit', :task_id => task}, {:method => 'get', :class => 'edit'}) %>
                <%= t.d button_to("удалить", { :controller => '/user/task', :action => 'destroy', :task_id => task}, {:class => 'destroy'}) %>
            <% end %>
        <% end %>
    <% end %>
  </section>
</article>
