<%= table_for @pairs do |t| %>
    <%= t.body do |pair| %>
        <%= t.r do %>
            <%= t.d link_to(pair.subject.name, { :controller => '/user/day/pair', :action => 'edit', :pair_id => pair, :year => params[:year], :month => params[:month], :day => params[:day] }, {:method => 'get'}) %>
            <%= t.d button_to("изменить", { :controller => '/user/day/task', :action => 'edit', :pair_id => pair, :year => params[:year], :month => params[:month], :day => params[:day] }, {:method => 'get', :class => 'edit'}) %>
            <%= t.d button_to("удалить", { :controller => '/user/day/task', :action => 'destroy', :pair_id => pair, :year => params[:year], :month => params[:month], :day => params[:day]}, {:class => 'destroy'}) %>
        <% end %>
    <% end %>
<% end %>
