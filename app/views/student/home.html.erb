<article id="home">
  <section id="main">
    <table>
      <thead>
        <tr><th><%= format_date(@date) %></th></tr>
      </thead>
      <tbody>
        <tr><td>Пары</td></tr>
        <% @pairs.each do |pair| %>
          <tr><td><%= link_to(pair.subject.name, {:controller => '/teacher/pair', :action => 'edit', :pair_id => pair, :day => @date.day, :month => @date.month, :year => @date.year}) %></td></tr>
        <% end %>
      </tbody>
    </table>

  </section>
</article>