      <li><%= link_to("Выход", {:controller => '/user/login', :action => 'logout'})%></li>
    </ul>
  </nav>
  <%= button_to("перезагрузить проект", {:controller => '/admin/project', :action => 'restart'},{:id => "restart", :confirm => "Перезагрузить проект?"}) %>
</header>
<%= yield %>
</body>
</html>
