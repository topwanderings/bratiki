  <nav>
    <ul>
      <% if params[:group_id] %>
        <li><%= link_to("Назад", { :controller => '/admin/institute/group', :action => 'index', :institute_id => params[:institute_id]}) %></li>  
      <% else %>
        <li><%= link_to("Назад", { :controller => '/admin/institute', :action => 'edit', :institute_id => params[:institute_id]}) %></li>  
